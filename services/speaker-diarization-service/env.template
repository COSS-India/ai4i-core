# Speaker Diarization Service Environment Configuration Template
# Copy this file to .env and update the values

# Service Configuration
SERVICE_NAME=speaker-diarization-service
SERVICE_PORT=8095
SERVICE_HOST=speaker-diarization-service
SERVICE_PUBLIC_URL=
SERVICE_INSTANCE_ID=
CONFIG_SERVICE_URL=http://config-service:8082
LOG_LEVEL=INFO

# PostgreSQL Configuration
DATABASE_URL=postgresql+asyncpg://dhruva_user:dhruva_secure_password_2024@postgres:5432/auth_db
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_secure_password_2024

# Triton Inference Server Configuration (Speaker Diarization)
# Default can be overridden with your actual Speaker Diarization deployment:
# e.g. http://65.1.35.3:8400
TRITON_ENDPOINT=http://triton-server:8000
TRITON_API_KEY=
TRITON_TIMEOUT=20
TRITON_CONCURRENCY=20

# Speaker Diarization Service Configuration
DEFAULT_SERVICE_ID=ai4bharat/speaker-diarization

# Authentication Configuration (for future integration)
AUTH_ENABLED=true
API_KEY_CACHE_TTL=300
SESSION_TIMEOUT_SECONDS=3600

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# Security Configuration
ALLOW_ANONYMOUS_ACCESS=false
REQUIRE_API_KEY=true

