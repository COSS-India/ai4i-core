{
  "dashboard": {
    "title": "NMT Service - Observability Dashboard",
    "tags": ["nmt", "observability", "ai4i"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "gridPos": {"x": 0, "y": 0, "w": 6, "h": 4},
        "type": "stat",
        "title": "Total Requests",
        "targets": [
          {
            "expr": "sum(ai4i_requests_total{service=\"nmt\"})",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 1000, "color": "yellow"},
                {"value": 5000, "color": "red"}
              ]
            },
            "unit": "short"
          }
        },
        "options": {
          "graphMode": "none",
          "colorMode": "value",
          "orientation": "auto"
        }
      },
      {
        "id": 2,
        "gridPos": {"x": 6, "y": 0, "w": 6, "h": 4},
        "type": "stat",
        "title": "Request Rate (req/sec)",
        "targets": [
          {
            "expr": "sum(rate(ai4i_requests_total{service=\"nmt\"}[5m]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 10, "color": "yellow"},
                {"value": 50, "color": "red"}
              ]
            },
            "unit": "reqps",
            "decimals": 2
          }
        },
        "options": {
          "graphMode": "none",
          "colorMode": "value"
        }
      },
      {
        "id": 3,
        "gridPos": {"x": 12, "y": 0, "w": 6, "h": 4},
        "type": "stat",
        "title": "Translation Requests",
        "targets": [
          {
            "expr": "sum(ai4i_inference_request_total{service=\"nmt\", task_type=\"translate\"})",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "blue"}
              ]
            },
            "unit": "short"
          }
        },
        "options": {
          "graphMode": "none",
          "colorMode": "value"
        }
      },
      {
        "id": 4,
        "gridPos": {"x": 18, "y": 0, "w": 6, "h": 4},
        "type": "stat",
        "title": "Error Rate",
        "targets": [
          {
            "expr": "sum(rate(ai4i_requests_total{service=\"nmt\", status_code=~\"4..|5..\"}[5m]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 0.1, "color": "yellow"},
                {"value": 1, "color": "red"}
              ]
            },
            "unit": "reqps",
            "decimals": 2
          }
        },
        "options": {
          "graphMode": "none",
          "colorMode": "value"
        }
      },
      {
        "id": 5,
        "gridPos": {"x": 0, "y": 4, "w": 12, "h": 8},
        "type": "timeseries",
        "title": "Request Rate Over Time",
        "targets": [
          {
            "expr": "sum(rate(ai4i_requests_total{service=\"nmt\"}[5m])) by (status_code)",
            "refId": "A",
            "legendFormat": "{{status_code}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "custom": {
              "axisLabel": "Requests/sec",
              "axisPlacement": "auto"
            },
            "unit": "reqps",
            "decimals": 2
          }
        },
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "bottom"
          },
          "tooltip": {
            "mode": "multi"
          }
        }
      },
      {
        "id": 6,
        "gridPos": {"x": 12, "y": 4, "w": 12, "h": 8},
        "type": "timeseries",
        "title": "Request Duration (p50, p95, p99)",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(ai4i_request_duration_seconds_bucket{service=\"nmt\"}[5m])) by (le))",
            "refId": "A",
            "legendFormat": "p50"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(ai4i_request_duration_seconds_bucket{service=\"nmt\"}[5m])) by (le))",
            "refId": "B",
            "legendFormat": "p95"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(ai4i_request_duration_seconds_bucket{service=\"nmt\"}[5m])) by (le))",
            "refId": "C",
            "legendFormat": "p99"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "custom": {
              "axisLabel": "Duration",
              "axisPlacement": "auto"
            },
            "unit": "s",
            "decimals": 3
          }
        },
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "bottom"
          },
          "tooltip": {
            "mode": "multi"
          }
        }
      },
      {
        "id": 7,
        "gridPos": {"x": 0, "y": 12, "w": 12, "h": 8},
        "type": "bargauge",
        "title": "Requests by Status Code",
        "targets": [
          {
            "expr": "sum(ai4i_requests_total{service=\"nmt\"}) by (status_code)",
            "refId": "A",
            "legendFormat": "{{status_code}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 400, "color": "yellow"},
                {"value": 500, "color": "red"}
              ]
            },
            "unit": "short",
            "custom": {
              "displayMode": "gradient",
              "orientation": "horizontal"
            }
          }
        },
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "bottom"
          }
        }
      },
      {
        "id": 8,
        "gridPos": {"x": 12, "y": 12, "w": 12, "h": 8},
        "type": "bargauge",
        "title": "Translation Requests by Language Pair",
        "targets": [
          {
            "expr": "sum(ai4i_inference_request_total{service=\"nmt\", task_type=\"translate\"}) by (source_language, target_language)",
            "refId": "A",
            "legendFormat": "{{source_language}} â†’ {{target_language}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "short",
            "custom": {
              "displayMode": "gradient",
              "orientation": "horizontal"
            }
          }
        },
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "bottom"
          }
        }
      },
      {
        "id": 9,
        "gridPos": {"x": 0, "y": 20, "w": 8, "h": 6},
        "type": "stat",
        "title": "P50 Duration",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(ai4i_request_duration_seconds_bucket{service=\"nmt\"}[5m])) by (le))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 0.5, "color": "yellow"},
                {"value": 1.0, "color": "red"}
              ]
            },
            "unit": "s",
            "decimals": 3
          }
        },
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        }
      },
      {
        "id": 10,
        "gridPos": {"x": 8, "y": 20, "w": 8, "h": 6},
        "type": "stat",
        "title": "P95 Duration",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(ai4i_request_duration_seconds_bucket{service=\"nmt\"}[5m])) by (le))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 1.0, "color": "yellow"},
                {"value": 2.0, "color": "red"}
              ]
            },
            "unit": "s",
            "decimals": 3
          }
        },
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        }
      },
      {
        "id": 11,
        "gridPos": {"x": 16, "y": 20, "w": 8, "h": 6},
        "type": "stat",
        "title": "P99 Duration",
        "targets": [
          {
            "expr": "histogram_quantile(0.99, sum(rate(ai4i_request_duration_seconds_bucket{service=\"nmt\"}[5m])) by (le))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 2.0, "color": "yellow"},
                {"value": 5.0, "color": "red"}
              ]
            },
            "unit": "s",
            "decimals": 3
          }
        },
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        }
      }
    ],
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "timepicker": {},
    "templating": {
      "list": []
    },
    "annotations": {
      "list": []
    },
    "editable": true,
    "fiscalYearStartMonth": 0,
    "graphTooltip": 1,
    "links": [],
    "liveNow": false,
    "weekStart": ""
  }
}



